<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="@color/white"

    tools:context="com.sheriaapp.dennis.sheriaapp.ui.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v7.widget.CardView

                android:id="@+id/card_business"

                android:layout_width="168dp"

                android:layout_height="141dp"


                android:layout_alignStart="@+id/card_employment"
                android:layout_below="@+id/card_employment"
                android:layout_marginRight="15dp"
                android:layout_marginTop="23dp"
                android:keepScreenOn="true"
                app:cardBackgroundColor="@color/transparent">


                <RelativeLayout

                    android:layout_width="match_parent"

                    android:layout_height="match_parent">


                    <ImageView

                        android:id="@+id/businessImage"

                        android:layout_width="100sp"

                        android:layout_height="100sp"

                        android:layout_marginLeft="40sp"

                        android:layout_marginTop="10sp"

                        app:srcCompat="@drawable/business" />


                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:layout_alignParentBottom="true"

                        android:layout_centerHorizontal="true"

                        android:text="Business"

                        android:textColor="@color/black"

                        android:textStyle="bold" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:id="@+id/card_land"

                android:layout_width="168dp"

                android:layout_height="141dp"


                android:layout_alignParentStart="true"

                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/transparent">


                <RelativeLayout

                    android:layout_width="match_parent"

                    android:layout_height="match_parent">


                    <ImageView

                        android:id="@+id/landImage"

                        android:layout_width="100sp"

                        android:layout_height="100sp"

                        android:layout_centerHorizontal="true"

                        android:layout_centerVertical="true"

                        android:layout_marginLeft="40sp"

                        app:srcCompat="@drawable/land" />


                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:layout_alignParentBottom="true"

                        android:layout_centerHorizontal="true"

                        android:text="Land Issues"

                        android:textColor="@color/black"

                        android:textStyle="bold" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:id="@+id/card_police"

                android:layout_width="168dp"

                android:layout_height="141dp"

                android:layout_alignEnd="@+id/card_marriage"

                android:layout_alignTop="@+id/card_business"

                android:layout_marginLeft="16dp"

                app:cardBackgroundColor="@color/transparent"
                app:layout_constraintBottom_toBottomOf="parent">


                <RelativeLayout

                    android:layout_width="170dp"

                    android:layout_height="144dp">


                    <ImageView

                        android:id="@+id/imagePolice"

                        android:layout_width="100sp"

                        android:layout_height="100sp"

                        android:layout_alignParentTop="true"

                        android:layout_centerHorizontal="true"

                        android:layout_marginLeft="40sp"

                        android:layout_marginTop="9dp"

                        app:srcCompat="@drawable/police" />

                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:layout_alignParentBottom="true"

                        android:layout_centerHorizontal="true"

                        android:text="Police"

                        android:textColor="@color/black"

                        android:textStyle="bold" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:id="@+id/card_marriage"

                android:layout_width="168dp"

                android:layout_height="141dp"

                android:layout_alignStart="@+id/card_land"
                android:layout_alignTop="@+id/card_employment"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="@color/transparent">


                <RelativeLayout

                    android:layout_width="match_parent"

                    android:layout_height="match_parent">


                    <ImageView

                        android:id="@+id/imageMarriage"

                        android:layout_width="100sp"

                        android:layout_height="100sp"

                        android:layout_alignParentTop="true"

                        android:layout_centerHorizontal="true"

                        android:layout_marginLeft="40sp"

                        android:layout_marginTop="9dp"

                        app:srcCompat="@drawable/marriage" />

                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:layout_alignParentBottom="true"

                        android:layout_centerHorizontal="true"

                        android:text="Marriages"

                        android:textColor="@color/black"

                        android:textStyle="bold" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:id="@+id/card_employment"

                android:layout_width="168dp"

                android:layout_height="141dp"

                android:layout_alignStart="@+id/card_court"
                android:layout_below="@+id/card_court"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="@color/transparent">


                <RelativeLayout

                    android:layout_width="167dp"

                    android:layout_height="match_parent">


                    <ImageView

                        android:id="@+id/imageEmployee"

                        android:layout_width="100sp"

                        android:layout_height="100sp"

                        android:layout_alignEnd="@+id/textView4"

                        android:layout_alignParentTop="true"

                        android:layout_marginLeft="40sp"
                        android:layout_marginTop="9dp"
                        app:srcCompat="@drawable/employee" />

                    <TextView

                        android:id="@+id/textView4"

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:layout_alignParentBottom="true"

                        android:layout_centerHorizontal="true"

                        android:text="Employee Rights"

                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:id="@+id/card_court"

                android:layout_width="168dp"

                android:layout_height="141dp"

                android:layout_alignParentEnd="true"

                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/transparent">


                <RelativeLayout

                    android:layout_width="match_parent"

                    android:layout_height="match_parent">


                    <ImageView

                        android:id="@+id/imageCourt"

                        android:layout_width="100sp"

                        android:layout_height="100sp"

                        android:layout_above="@+id/textView2"

                        android:layout_alignEnd="@+id/textView2"
                        android:layout_marginLeft="40sp"
                        app:srcCompat="@drawable/court" />


                    <TextView

                        android:id="@+id/textView2"

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:layout_alignParentBottom="true"

                        android:layout_centerHorizontal="true"

                        android:text="Court Process"

                        android:textColor="@color/black"

                        android:textStyle="bold" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <Button

                android:id="@+id/chatWithBot"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"

                android:layout_alignParentTop="false"
                android:layout_centerHorizontal="true"
                android:background="@color/maincolor"
                android:text="Chat With Bot"
                android:textColor="@color/white">


            </Button>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>